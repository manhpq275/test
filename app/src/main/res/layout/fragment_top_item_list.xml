<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/fragment_background_color"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingTop="@dimen/recycle_view_padding"
        android:paddingRight="@dimen/recycle_view_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Card.NoMargins.NoClick">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.Card.NoMargins.NoClick">
                    <ImageView
                        android:id="@+id/imAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"/>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:id="@+id/lnInfo"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_below="@+id/imAvatar"
                    android:background="@android:color/white"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/recycle_view_padding"
                    android:paddingBottom="@dimen/recycle_view_padding">
                    <LinearLayout
                        android:id="@+id/lnName"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerHorizontal="true">
                        <TextView
                            android:id="@+id/tvName"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:text="Minh Ngoc"
                            android:textSize="@dimen/text_size_list"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgOnlineStatus"
                                android:layout_width="20dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/ico_online"/>
                            <TextView
                                android:id="@+id/tvOnlineStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txtAway"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvYearsOld"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/lnName"/>
                        <TextView
                            android:id="@+id/tvHeight"
                            android:paddingLeft="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/lnName"/>
                    </LinearLayout>
                    <TextView
                        android:paddingTop="5dp"
                        android:id="@+id/tvJob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/lnName"/>
                    <TextView
                        android:id="@+id/tvShowMore"
                        android:paddingTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/lnName"
                        android:textColor="@color/black"
                        android:text="@string/showDetail"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <ImageView
        android:id="@+id/btnLike"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/btn_like_full"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>