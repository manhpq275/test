<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/fragment_background_color"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingTop="@dimen/recycle_view_padding"
        android:paddingRight="@dimen/recycle_view_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imAvatar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:id="@+id/lnInfo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/imAvatar"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/recycle_view_padding"
            android:paddingBottom="@dimen/recycle_view_padding"
            >

            <LinearLayout
                android:id="@+id/lnName"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_online"/>
                <TextView
                    android:id="@+id/tvName"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="Minh Ngoc"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvYearsOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lnName"
                android:text=" 23 Years Old"/>
        </LinearLayout>


    </RelativeLayout>
    <ImageView
        android:id="@+id/btnLike"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/btn_like_full"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>